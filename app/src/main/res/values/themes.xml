<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Dark" parent="@android:style/Theme.Material">
        <item name="changelogIcon">@drawable/ic_changelog</item>
        <item name="noUpdateAvailable">@color/material_red_500</item>
        <item name="updateAvailable">@color/material_light_green_500</item>
        <item name="settingsIcon">@drawable/ic_settings_dark</item>
        <item name="downloadIcon">@drawable/drawable_download</item>
        <item name="browserIcon">@drawable/drawable_website</item>
        <item name="donateIcon">@drawable/drawable_donate</item>
        <item name="checkIcon">@drawable/drawable_check</item>
        <item name="addonsIcon">@drawable/drawable_addon</item>
        <item name="separator">@color/separator_dark</item>
        <item name="backgroundRippleSelector">@drawable/ripple_selector_dark</item>
        <item name="android:colorPrimary">@color/material_primary</item>
        <item name="android:colorPrimaryDark">@color/material_primary_dark</item>
        <item name="colorPrimary">@color/material_primary</item>
        <item name="colorPrimaryDark">@color/material_primary_dark</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorAccent">@color/accent_material_dark</item>
        <item name="cardBackground">@color/card_background_material_dark</item>
        <item name="textColorPrimary">@color/primary_text_material_dark</item>
        <item name="textColorSecondary">@color/secondary_text_material_dark</item>
        <item name="materialAccent">@color/accent_material_dark</item>
        <item name="cardStyle">@style/CardStyle.Dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="Theme.Dark.Settings" parent="Theme.Dark">
        <item name="android:colorAccent">@color/blue</item>
        <item name="android:colorPrimary">@color/material_primary</item>
        <item name="android:colorPrimaryDark">@color/material_primary_dark</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowActionBar">true</item>
    </style>

    <style name="Theme.Light" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="changelogIcon">@drawable/ic_changelog</item>
        <item name="noUpdateAvailable">@color/material_red_500</item>
        <item name="updateAvailable">@color/material_light_green_500</item>
        <item name="settingsIcon">@drawable/ic_settings_dark</item>
        <item name="downloadIcon">@drawable/drawable_download</item>
        <item name="browserIcon">@drawable/drawable_website</item>
        <item name="donateIcon">@drawable/drawable_donate</item>
        <item name="checkIcon">@drawable/drawable_check</item>
        <item name="addonsIcon">@drawable/drawable_addon</item>
        <item name="separator">@color/separator_light</item>
        <item name="backgroundRippleSelector">@drawable/ripple_selector_light</item>
        <item name="android:colorPrimary">@color/material_primary</item>
        <item name="android:colorPrimaryDark">@color/material_primary_dark</item>
        <item name="colorPrimary">@color/material_primary</item>
        <item name="colorPrimaryDark">@color/material_primary_dark</item>
        <item name="android:colorAccent">@color/accent_material_light</item>
        <item name="cardBackground">@color/card_background_material_light</item>
        <item name="cardStyle">@style/CardStyle.Light</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="textColorPrimary">@color/primary_text_material_light</item>
        <item name="textColorSecondary">@color/secondary_text_material_light</item>
        <item name="materialAccent">@color/accent_material_light</item>
    </style>

    <style name="Theme.Light.Settings" parent="@style/Theme.Light">
        <item name="android:colorAccent">@color/blue</item>
        <item name="android:colorPrimary">@color/material_primary</item>
        <item name="android:colorPrimaryDark">@color/material_primary_dark</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowActionBar">true</item>
    </style>
</resources>